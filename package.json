{
  "name": "tigerpro",
  "version": "1.0.0",
  "description": "Tiger Pro App",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass wp-content/themes/tigerpro/frontend/src/sass/main.scss wp-content/themes/tigerpro/frontend/dist/css/style.css -w",
    "devserver": "live-server --open=wp-content/themes/tigerpro/frontend/src --watch=wp-content/themes/tigerpro/frontend/src",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass wp-content/themes/tigerpro/frontend/src/sass/main.scss wp-content/themes/tigerpro/frontend/dist/css/style.comp.css",
    "concat:css": "concat -o wp-content/themes/tigerpro/frontend/dist/css/style.concat.css wp-content/themes/tigerpro/frontend/dist/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" wp-content/themes/tigerpro/frontend/dist/css/style.comp.css -o wp-content/themes/tigerpro/frontend/dist/css/style.prefix.css",
    "compress:css": "node-sass wp-content/themes/tigerpro/frontend/dist/css/style.prefix.css wp-content/themes/tigerpro/frontend/dist/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Yevhenii Rodkin",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "node_modules/**",
      "**/vendor/**.js"
    ]
  }
}
